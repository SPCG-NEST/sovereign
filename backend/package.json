{
  "name": "backend",
  "type": "module",
  "devDependencies": {
    "@edgedb/generate": "^0.5.6",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@solana/web3.js": "^2.0.0-rc.4",
    "bs58": "^6.0.0",
    "bullmq": "^5.34.4",
    "edgedb": "^1.5.12",
    "hono": "^4.6.14",
    "ioredis": "^5.4.2",
    "nanoid": "^5.0.9"
  },
  "scripts": {
    "copy-program-deps": "cp ../programs/target/idl/programs.json ./deps/sovereign.json && cp ../programs/target/types/programs.ts ./deps/sovereign.ts",
    "redis": "keydb-server > /dev/null 2>&1 &",
    "update-db": "edgedb migration create && edgedb migrate && bun generate-edgedb-types",
    "generate-edgedb-types": "bunx @edgedb/generate edgeql-js --out ./edgedb-js && bunx @edgedb/generate interfaces --file ./edgedb-js/interfaces.ts",
    "hub": "bun run src/hub/index.ts",
    "api": "bun run src/api/index.ts"
  }
}
